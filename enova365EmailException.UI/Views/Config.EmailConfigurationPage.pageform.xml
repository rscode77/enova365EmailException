<?xml version="1.0" encoding="utf-8" ?>

<DataForm xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" RightName="Page:EmailConfigurationPage" xmlns="http://www.enova.pl/schema/form.xsd">
  <Page Name="EmailConfigurationPage" CaptionHtml="EmailException/Konfiguracja email" DataContext="{DataSource}">
	  <Group CaptionHtml="Konfiguracja EmailException" LabelWidth="*">
		  <Gap Height="0.2" />
		  <Label CaptionHtml="Wybierz email z które mają zostać przesyłane wyjątki."/>
		  <Grid Width="70" Height="7" EditValue="{new EmailConfigurationPage.EmailAddresses}" EditInPlace="true">
			  <Field CaptionHtml="Email" Width="40" Visibility="1" EditValue="{Email}" IsReadOnly="true"/>
			  <Field CaptionHtml="Wybrany" Width="10" Visibility="1" EditValue="{SelectedEmail}" IsReadOnly="false"/>
		  </Grid>
		  <Gap Height="0.2" />
		  <Label CaptionHtml="Wprowadź email na który mają zostać wysłane wyjątki."/>
		  <Field CaptionHtml="Email" Width="45" Visibility="1" EditValue="{new EmailConfigurationPage.ReceipientEmail}" IsReadOnly="false"/>
	  </Group>	  
  </Page>
</DataForm>

